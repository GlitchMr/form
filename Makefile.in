RAKUDO=<RAKUDO>

PERL6LIB=lib/

SOURCES=lib/Test.pm lib/Form/Actions.pm lib/Form/Grammar.pm lib/Form/TextFormatting.pm lib/Form/Field.pm lib/Form.pm

PIRS=$(SOURCES:.pm=.pir)

all: $(PIRS)

%.pir: %.pm
	PERL6LIB=$(PERL6LIB) $(RAKUDO) --target=pir --output=$@ $<

clean:
	rm -f $(PIRS)

tests: test

test: all
	PERL6LIB=$(PERL6LIB) prove --perl '$(RAKUDO)' -r t/
